{
  "name": "haus",
  "version": "1.0.0",
  "description": "Your house or house's management",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently -p \"[{name}]\" -n \"HTTP,JS,CSS\" -c \"bgBlue.bold,bgMagenta.bold,bgGreen.bold\" \"live-server\" \"npm run watch-files\"",
    "bundle": "jspm bundle-sfx lib/app dist/main.js",
    "watch-files": "nodemon -e js --ignore dist/ -x \"npm run bundle\""
  },
  "author": "Michael Bell",
  "license": "ISC",
  "dependencies": {
    "app-router": "git+https://github.com/erikringsmuth/app-router.git",
    "bulma": "^0.2.3",
    "jspm": "~0.16.48",
    "live-server": "^1.1.0",
    "pushstate-anchor": "~0.4.4",
    "webcomponents.js": "~0.7.23",
    "nodemon": "^1.11.0",
    "concurrently": "~3.1.0"
  },
  "jspm": {
    "dependencies": {
      "pouchdb": "github:pouchdb/pouchdb@^6.1.0"
    },
    "devDependencies": {
      "babel": "npm:babel-core@^5.8.24",
      "babel-runtime": "npm:babel-runtime@^5.8.24",
      "core-js": "npm:core-js@^1.1.4",
      "sass": "github:mobilexag/plugin-sass@^0.5.1"
    }
  }
}
